@model Employee


    <!--Employee Name-->
<div asp-validation-summary="ModelOnly" class="text-danger"></div>


@if(ViewBag.isEdit == true)
            {
                <input asp-for="Id" class="d-none" />
            }


<div class="row">
    <div class="col-md">
        <div class="form-group mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md">
        <div class="form-group mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-md">
        <div class="form-group mb-3">
            <label asp-for="Birth"></label>
            <input asp-for="Birth" class="form-control">
            <span asp-validation-for="Birth" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md">
        <div class="form-group mb-3">
            <label asp-for="JobTitle"></label>
            <input asp-for="JobTitle" class="form-control">
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md">
        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md">
        <div class="form-group mb-3">
            <label asp-for="MobileNo"></label>
            <input asp-for="MobileNo" class="form-control">
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="col-md">
    <div class="form-group mb-3">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
</div>
